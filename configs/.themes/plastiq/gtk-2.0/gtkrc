widget_class "*.<GtkCellView>"  		style "text_is_fg_color_workaround"
widget "*.gtk-combobox-popup-menu.*" 		style "menuitem_text_is_fg_color_workaround"
widget "*.<GtkListItem>*"		style:highest "theme-tree"
