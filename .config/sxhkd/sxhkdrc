# vim: set ft=sxhkdrc:
#
# bspwm hotkeys
#

# Exit bspcwm
#alt + shift + {super,_ + }q
#	{bspc query -T > "$BSPWM_TREE"; \
#		bspc query -H > "$BSPWM_HISTORY"; \
#			bspc quit && pkill bar && pkill dzen2,\
#	bspc quit 1 && pkill bar && pklil dzen2}, bspc quit 1 && pkill bar && pklil dzen2

alt + shift + q
	bspc quit 1 && pkill bar && pkill dzen2

# Toggle panels
alt + q
	{pkill panel; pkill cat; pkill conky; bspc config top_padding 0 ,\
	bspc config top_padding 14; /home/sunn/.config/bspwm/panel/panel & }


# Workstation Monitor
alt + w
	bspc monitor -f next

# Close window
alt + shift + x
	bspc  window -c

# Kill all detached tmux sessions
alt + x
	/home/sunn/scripts/tmux_purge

alt + ctrl + shift + x
	bspc  window -k

# Toggle tile
alt + {_,shift +} t
	bspc window -t {floating,fullscreen}

alt + shift + p
	bspc window -t private

# Balance tree
alt + b
	bspc desktop -B

# TODO: Presel window for splitting
alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Move window into presel position
alt + shift {a,s,d,f}
	bspc window -w {left,down,up,right}

# Select windows, or move
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Resize the hard way 
#alt + shift + {a,s,d,f}
#	bspc window -e {left,down,up,right} push
#
#alt + {a,s,d,f}
#	bspc window -e {right,up,down,left} pull
alt + a
	bspc window --edge right push || bspc window --edge left push
alt + f
	bspc window --edge right pull || bspc window --edge left pull
alt + s
	bspc window --edge up push || bspc window --edge down push
alt + d
	bspc window --edge up pull || bspc window --edge down pull

# Move current window to largest space
alt + Return
	bspc window -s biggest

# Circulate leaves of tree
alt + {comma,period}
	bspc desktop -F {horizontal,vertical}

alt + shift + {comma,period}
	bspc desktop -R {90,270}

# Select previous / next desktop
alt + {p,n}
	bspc desktop -f {prev.occupied,next.occupied} 

# Cancel preselection for splitting
alt + Escape
	bspc desktop -c

alt + space 
	bspc desktop -l next

alt + e
	bspc window -f {next.floating,next.tiled}

alt + minus
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 4 ))

alt + equal
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 4 ))

# Set splitting ratio of windows
alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Focus or move window to desktops
#alt + {_,shift + }{1-9,0}
#	bspc {desktop -f,window -d} {1-9,0}
#
#ctrl + {_,shift + }{1-9,0}
#	bspc {desktop -f,window -d} {a,b,c,d,e,f,g,h,i,j}
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} {i,ii,iii,iv,v,vi,vii,viii,ix,x}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} {I,II,III,IV,V,VI,VII,VIII,IX,X}


# Move or resize window
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i


super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

alt + shift + backslash
#	/home/sunn/scripts/transparent_blank 
	create_frame 

alt + shift + Return
	urxvtc 

alt + ctrl + Return
	 rulc -a true floating=true duration=1; urxvtc

alt + r
	/home/sunn/scripts/lens

alt + shift + r
	/home/sunn/scripts/dmenu/spotlight

alt + shift + b
	firefox

alt + shift + n
	xterm

alt + z
	zathura

alt + Tab
	{/home/sunn/.config/bspwm/panel/launcher_menu /home/sunn/.config/bspwm/panel/launcher_apps, pkill dzen2}

XF86AudioRaiseVolume
	/home/sunn/scripts/dvol2 -i 2 & mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioLowerVolume
	/home/sunn/scripts/dvol2 -d 2 & mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
	/home/sunn/scripts/dvol2 -t 

XF86Sleep
	pm-suspend

XF86AudioPlay
	ncmpcpp toggle
	
XF86AudioNext
	ncmpcpp next

XF86AudioPrev
	ncmpcpp prev

Print
	scrot -q 100

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

super + alt + {_,shift + }Escape
    {bspc query -T > "$BSPWM_TREE"; \
        bspc query -H > "$BSPWM_HISTORY"; \
            bspc quit,\
     bspc quit 1}

alt + F1
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_music.sh
alt + F2
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_network.sh
alt + F3
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_battery.sh
alt + F4
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_hardware.sh
alt + F5
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_date.sh
alt + F6
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_log.sh
