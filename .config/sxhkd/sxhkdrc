# vim: set ft=sxhkdrc:
#
# bspwm hotkeys
#

# Exit bspcwm
alt + shift + q
	bspc quit && pkill bar && pkill dzen2

# Workstation Monitor
alt + w
	bspc monitor -f next

# Close window
alt + shift + x
	bspc  window -c

alt + ctrl + shift + x
	bspc  window -k

# Toggle tile
alt + {_,shift +} t
	bspc window -t {floating,fullscreen}

# Balance tree
alt + b
	bspc desktop -B

# TODO: Presel window for splitting
alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Move window into presel position
alt + ctrl + shift {h,j,k,l}
	bspc window -w {left,down,up,right}

# Select windows, or move
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Resize the hard way 
alt + shift + {a,s,d,f}
	bspc window -e {left,down,up,right} push

alt + {a,s,d,f}
	bspc window -e {right,up,down,left} pull

# Move current window to largest space
alt + Return
	bspc window -s biggest

# Circulate leaves of tree
alt + {comma,period}
	bspc desktop -F {horizontal,vertical}

alt + shift + {comma,period}
	bspc desktop -R {90,270}

# Select previous / next desktop
alt + {p,n}
	bspc desktop -f {prev.occupied,next.occupied} 

# Cancel preselection for splitting
alt + Escape
	bspc desktop -c

alt + space 
	bspc desktop -l next

alt + minus
	bspc config window_gap $((`bspc config window_gap` - 5 ))

alt + plus
	bspc config window_gap $((`bspc config window_gap` + 5 ))

# Set splitting ratio of windows
alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Focus or move window to desktops
#alt + {_,shift + }{1-9,0}
#	bspc {desktop -f,window -d} {1-9,0}
#
#ctrl + {_,shift + }{1-9,0}
#	bspc {desktop -f,window -d} {a,b,c,d,e,f,g,h,i,j}
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} {i,ii,iii,iv,v,vi,viii,ix,x}
ctrl + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} {I,II,III,IV,V,VI,VIII,IX,X}

:button1
	bspc pointer -g focus

# Move or resize window
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#


alt + shift + Return
	urxvtc

alt + ctrl + Return
	urxvtc && bspc window -t floating

alt + r
	gmrun

alt + shift + b
	firefox

alt + shift + n
	xterm

alt + z
	zathura

alt + Tab
	menu /home/sunn/.xmonad/apps

XF86AudioRaiseVolume
	/home/sunn/scripts/dvol2 -i 2 & mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioLowerVolume
	/home/sunn/scripts/dvol2 -d 2 & mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
	/home/sunn/scripts/dvol2 -t 

XF86Sleep
	pm-suspend

XF86AudioPlay
	ncmpcpp toggle
	
XF86AudioNext
	ncmpcpp next

XF86AudioPrev
	ncmpcpp prev

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

alt + F1
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_music.sh
alt + F2
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_network.sh
alt + F3
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_battery.sh
alt + F4
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_hardware.sh
alt + F5
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_date.sh
alt + F6
	/home/sunn/.xmonad/sc /home/sunn/.xmonad/scripts/dzen_log.sh
